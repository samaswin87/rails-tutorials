<div class="text-center">
  <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
  <h2 class="h3 mb-3 font-weight-normal">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
    <br>
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3 text-left">
        <label>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </label>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
